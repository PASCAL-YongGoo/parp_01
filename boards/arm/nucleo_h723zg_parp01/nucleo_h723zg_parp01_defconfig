# Enable MPU
CONFIG_ARM_MPU=y

# Enable Hardware Stack Protection
CONFIG_HW_STACK_PROTECTION=y

# Enable GPIO
CONFIG_GPIO=y

# Enable Pinctrl
CONFIG_PINCTRL=y

# Enable Clock Control
CONFIG_CLOCK_CONTROL=y

# Serial Drivers
CONFIG_SERIAL=y
CONFIG_UART_INTERRUPT_DRIVEN=y

# Console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable printf/printk
CONFIG_PRINTK=y
# CONFIG_EARLY_CONSOLE is not set (custom pins need pinctrl init first)
