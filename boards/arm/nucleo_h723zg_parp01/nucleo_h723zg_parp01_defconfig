# 400MHz System Clock
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=400000000

# Enable MPU
CONFIG_ARM_MPU=y

# Enable Hardware Stack Protection
CONFIG_HW_STACK_PROTECTION=y

# Enable GPIO
CONFIG_GPIO=y

# Enable Pinctrl
CONFIG_PINCTRL=y

# Enable Clock Control
CONFIG_CLOCK_CONTROL=y

# Serial Drivers
CONFIG_SERIAL=y
CONFIG_UART_INTERRUPT_DRIVEN=y

# Console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable printf/printk
CONFIG_PRINTK=y
CONFIG_EARLY_CONSOLE=y

# Enable shell
CONFIG_SHELL=y
